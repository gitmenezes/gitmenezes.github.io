            <!-- Campo: Outras Características (Custom) -->
            <div>
                <label for="customTraits" class="block text-sm font-medium text-gray-700 mb-1">Outras Características Visuais (Opcional)</label>
                <textarea id="customTraits" rows="3" placeholder="Ex: poucas tatuagens minimalistas no braço, um piercing no nariz, sardas na bochecha, roupas mais largas, etc." class="w-full p-3 border border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500 resize-none"></textarea>
            </div>

        </div>


        <!-- Botão de Geração -->
        <button onclick="generatePrompt()" class="btn-generate w-full py-3 px-4 text-white font-bold rounded-xl text-lg hover:shadow-lg focus:outline-none focus:ring-4 focus:ring-amber-500 focus:ring-opacity-50">
            Gerar Prompt Completo
        </button>

        <!-- Seção de Resultado -->
        <div id="resultSection" class="mt-8 hidden">
            <h2 class="text-xl font-semibold text-gray-800 mb-3">Prompt de Geração Final</h2>
            <div class="relative result-panel p-4 md:p-6 rounded-xl">
                <textarea id="finalPrompt" rows="12" readonly class="w-full bg-transparent text-gray-800 text-base resize-none border-none focus:ring-0 p-0"></textarea>
                <button onclick="copyPrompt()" class="copy-button absolute top-3 right-3 bg-white text-amber-600 p-2 rounded-full hover:bg-amber-100 transition duration-150 ease-in-out" title="Copiar Prompt">
                    <!-- Ícone SVG de Copiar -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
                </button>
            </div>
            <p id="copyMessage" class="text-sm text-green-600 mt-2 opacity-0 transition duration-300">Copiado!</p>
        </div>
    </div>

    <script>
        // Função para obter o valor. Não há mais defaults forçados.
        function getValue(id) {
            return document.getElementById(id).value;
        }
        
        // UTILITY: Função para fetch com backoff exponencial
        async function exponentialBackoffFetch(url, options, maxRetries = 5, delay = 1000) {
            for (let i = 0; i < maxRetries; i++) {
                try {
                    const response = await fetch(url, options);
                    if (response.status !== 429 && response.status < 500) {
                        return response;
                    }
                } catch (error) {
                    // Ignora erro de rede e tenta novamente
                }
                if (i < maxRetries - 1) {
                    await new Promise(resolve => setTimeout(resolve, delay));
                    delay *= 2; // Aumento exponencial
                }
            }
            // Última tentativa para retornar o erro
            return fetch(url, options);
        }

        // FUNÇÃO: Atualiza o campo Cenário com sugestões
        function updateEnvironmentOptions(selectEl, suggestions, productName) {
            // 1. Remove optgroups de sugestões anteriores
            const existingOptions = selectEl.querySelectorAll('optgroup[data-source="suggestion"]');
            existingOptions.forEach(opt => opt.remove());

            // 2. Cria um novo optgroup para as sugestões
            const newOptGroup = document.createElement('optgroup');
            newOptGroup.label = `SUGESTÕES IA para ${productName.toUpperCase()}`;
            newOptGroup.dataset.source = 'suggestion';

            suggestions.forEach((scenario, index) => {
                const option = document.createElement('option');
                option.value = scenario;
                option.textContent = `Sugestão ${index + 1}: ${scenario}`;
                newOptGroup.appendChild(option);
            });

            // 3. Adiciona o novo optgroup após a opção N/A (que é a primeira)
            const firstOption = selectEl.querySelector('option[value=""]');
            if (firstOption) {
                selectEl.insertBefore(newOptGroup, firstOption.nextSibling);
            } else {
                selectEl.prepend(newOptGroup);
            }
            
            // Seleciona a primeira sugestão para melhor UX
            selectEl.value = suggestions[0];
        }

        // FUNÇÃO: Faz a chamada à API do Gemini para sugestão de cenário
        async function suggestEnvironment() {
            const productName = document.getElementById('productName').value.trim();
            const messageEl = document.getElementById('suggestionMessage');
            const selectEl = document.getElementById('environment');
            
            if (!productName) {
                messageEl.textContent = 'Por favor, insira o nome de um produto.';
                messageEl.classList.remove('text-green-600', 'text-amber-500');
                messageEl.classList.add('text-red-500');
                return;
            }
            
            messageEl.textContent = 'Gerando sugestões de cenários...';
            messageEl.classList.remove('text-red-500', 'text-green-600');
            messageEl.classList.add('text-amber-500');

            // API Setup
            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            
            const userPrompt = `Sugira 3 cenários de User Generated Content (UGC) autênticos e de vida real para promover o seguinte produto: "${productName}".`;
            const systemInstruction = "Você é um especialista em marketing e deve sugerir 3 cenários de gravação UGC (User Generated Content) que maximizem a conexão e a autenticidade, apresentando a saída estritamente no formato JSON solicitado.";

            const scenarioSchema = {
                type: "ARRAY",
                description: "An array containing exactly three distinct and descriptive UGC scenarios (locations and activities) that are highly relevant for promoting the specified product.",
                items: {
                    type: "STRING",
                    description: "A single, highly descriptive scenario string, e.g., 'Cozinha minimalista enquanto prepara um café chique'."
                }
            };

            const payload = {
                contents: [{ parts: [{ text: userPrompt }] }],
                systemInstruction: { parts: [{ text: systemInstruction }] },
                generationConfig: {
                    responseMimeType: "application/json",
                    responseSchema: scenarioSchema
                }
            };

            try {
                const response = await exponentialBackoffFetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);

                const result = await response.json();
                
                const jsonText = result.candidates?.[0]?.content?.parts?.[0]?.text;
                
                if (!jsonText) throw new Error("Resposta da IA vazia ou malformada.");

                const suggestions = JSON.parse(jsonText);
                
                if (Array.isArray(suggestions) && suggestions.length === 3) {
                    // Atualiza o box Cenário
                    updateEnvironmentOptions(selectEl, suggestions, productName);
                    messageEl.textContent = `3 cenários sugeridos para "${productName}" foram adicionados no topo da lista.`;
                    messageEl.classList.remove('text-amber-500', 'text-red-500');
                    messageEl.classList.add('text-green-600');
                } else {
                    throw new Error("A IA não retornou 3 cenários válidos.");
                }

            } catch (error) {
                console.error("Erro na sugestão de cenário:", error);
                messageEl.textContent = 'Erro ao gerar sugestões. Tente novamente.';
                messageEl.classList.remove('text-amber-500', 'text-green-600');
                messageEl.classList.add('text-red-500');
            }
        }

        // FUNÇÃO: Gera o prompt principal
        function generatePrompt() {
            // 1. Coleta de valores (vazios se N/A)
            const gender = getValue('gender');
            const ageGroup = getValue('age');
            const skinColor = getValue('skinColor');
            const eyeColor = getValue('eyeColor');
            const hair = getValue('hair');
            const physique = getValue('physique');
            const socialFormat = getValue('socialFormat');
            const environment = getValue('environment');
            const cameraShotValue = getValue('cameraShot');
            const customTraits = document.getElementById('customTraits').value.trim();
            
            // 2. Definição da Pessoa e Idade (Essenciais para a estrutura)
            let genderTerm = '';
            let ageTerm = '';
            
            if (gender === 'Feminino') {
                genderTerm = 'Mulher';
            } else if (gender === 'Masculino') {
                genderTerm = 'Homem';
            } else if (gender === 'Não-Binário') {
                genderTerm = 'Pessoa (gênero não-binário)';
            } else {
                genderTerm = 'Influenciador(a) digital'; // Termo neutro/padrão
            }

            if (ageGroup) {
                ageTerm = `(idade aparente: ${ageGroup})`;
            } else {
                ageTerm = '(jovem adulta/o)'; // Termo neutro/padrão para o brief original
            }

            // Inicia a descrição do personagem
            let influencerDescription = `${genderTerm} ${ageTerm}`;
            
            // 3. Detalhes Visuais (Adiciona apenas se preenchido)
            const visualDetails = [];
            if (skinColor) visualDetails.push(skinColor);
            if (hair) visualDetails.push(hair);
            if (eyeColor) visualDetails.push(`olhos ${eyeColor}`);
            if (physique) visualDetails.push(physique);

            if (visualDetails.length > 0) {
                influencerDescription += ', com ' + visualDetails.join(', ');
            }
            influencerDescription += '.';
            
            if (customTraits) {
                influencerDescription += ` Características adicionais: ${customTraits}.`;
            }

            // 4. Ajusta a descrição da aparência (maquiagem/barba)
            let defaultLookDesc = 'aparência realista, carismática, expressão confiante e espontânea';

            if (gender === 'Feminino' || !gender) { // Se não for especificado, assume o padrão feminino do brief
                defaultLookDesc += ', maquiagem leve, cabelo solto ou preso de forma natural.';
            } else if (gender === 'Masculino') {
                 defaultLookDesc += ', cabelo e barba bem cuidados ou descontraídos.';
            } else {
                 defaultLookDesc += ', estilo pessoal casual e autêntico.';
            }
            
            // 5. Elementos de Cena e Câmera (Usa os valores selecionados ou o padrão do brief original)
            
            const finalFormat = socialFormat || '9:16';
            
            let formatDescription = '';
            if (finalFormat === '16:9') {
                formatDescription = `enquadramento horizontal (formato 16:9),`;
            } else if (finalFormat === '1:1') {
                formatDescription = `enquadramento quadrado (formato 1:1),`;
            } else if (finalFormat === '4:5') {
                 formatDescription = `enquadramento vertical (formato 4:5),`;
            } else { // 9:16 (padrão do brief)
                formatDescription = `enquadramento vertical (formato 9:16),`;
            }
            
            const finalCameraShot = cameraShotValue || 'plano médio no rosto, eye-level';

            const cameraDescription = `${formatDescription} ${finalCameraShot}.`;
            
            // Cenário: Se N/A, usa a descrição genérica do brief original
            const finalEnvironment = environment || 'ambiente caseiro com boa iluminação natural — pode ser sala, quarto ou cozinha minimalista.';


            // 6. Elementos Fixos (Cena, Estilo, Câmera, Vibe)
            const fixedElements = `
Cena de estilo UGC (User Generated Content), transmitindo naturalidade e proximidade, como se estivesse gravando com o próprio celular.
${defaultLookDesc}
Cenário: ${finalEnvironment}. A luz deve ser suave, quente e difusa, estilo "golden hour".
Estilo e mood: estética autêntica, casual e leve, como se estivesse mostrando um produto, dando uma dica ou compartilhando experiência pessoal.
Roupa: look casual e moderno (camiseta básica, top de algodão, jeans ou moletom neutro) em tons quentes e naturais (bege, areia, dourado suave, branco, terracota).
Câmera: ${cameraDescription}
Vibe geral: genuína, leve e inspiradora, estilo “diário de vida real”, transmitindo confiança e conexão com o público.
--ar ${finalFormat} --v 6.0
            `;

            const finalPrompt = (influencerDescription + fixedElements).trim().replace(/ {2,}/g, ' ');

            document.getElementById('finalPrompt').value = finalPrompt;
            document.getElementById('resultSection').classList.remove('hidden');

            // Rola para a seção de resultado para melhor UX em mobile
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }

        // Função para copiar o prompt para a área de transferência
        function copyPrompt() {
            const promptTextarea = document.getElementById('finalPrompt');
            
            // Seleciona o texto no textarea
            promptTextarea.select();
            promptTextarea.setSelectionRange(0, 99999); // Para mobile
            
            // Tenta copiar
            try {
                // document.execCommand('copy') é usado para maior compatibilidade em iFrames
                const successful = document.execCommand('copy');
                const msg = document.getElementById('copyMessage');
                
                if (successful) {
                    msg.textContent = 'Prompt Copiado com Sucesso!';
                    msg.classList.remove('opacity-0', 'text-red-600');
                    msg.classList.add('text-green-600');
                } else {
                    msg.textContent = 'Falha ao Copiar.';
                    msg.classList.remove('opacity-0', 'text-green-600');
                    msg.classList.add('text-red-600');
                }

                // Faz a mensagem de 'copiado' aparecer e desaparecer
                msg.classList.add('opacity-100');
                setTimeout(() => {
                    msg.classList.remove('opacity-100');
                    msg.classList.add('opacity-0');
                }, 2000);

            } catch (err) {
                console.error('Erro ao tentar copiar', err);
                const msg = document.getElementById('copyMessage');
                msg.textContent = 'Erro: A cópia não é suportada neste ambiente.';
                msg.classList.remove('opacity-0', 'text-green-600');
                msg.classList.add('text-red-600', 'opacity-100');
                setTimeout(() => {
                    msg.classList.remove('opacity-100');
                    msg.classList.add('opacity-0');
                }, 3000);
            }
        }
    </script>
</body>
</html>
